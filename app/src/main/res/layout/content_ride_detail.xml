<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fortin.carpool.RideDetail"
    tools:showIn="@layout/activity_ride_detail"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="3dp">

        <LinearLayout android:layout_height="0dp"
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout  android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/profileimg"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:src="@drawable/user_icon_dark"
                android:gravity="center"
                android:padding="2dp"
                android:layout_marginBottom="2dp"/>

            <Button android:id="@+id/btnfollow"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:text="Follow"
                android:background="@drawable/btn"
                android:textColor="@color/btntxtcolor" />

            </LinearLayout>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_marginLeft="10dp">

                <TextView android:id="@+id/tvname"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textColor="@color/txtcolordark"
                    android:text="Name"
                    android:gravity="center_vertical"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView android:id="@+id/tvplace"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:text="Place"
                    android:textSize="18dp"
                    android:textColor="@color/txtcolordark"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/marker_icon"/>
                <TextView android:id="@+id/tvcontactno"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:text="Contact Number"
                    android:textSize="18dp"
                    android:autoLink="phone"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:drawableLeft="@drawable/contact"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividercolor"/>
        <ScrollView android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.75">

            <LinearLayout android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView android:id="@+id/tvfbcnt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:text="Facebook Friend"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>


                <TextView android:id="@+id/tvverify"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:text="Verify User"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>

                <TextView android:id="@+id/tvdtime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Time"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>
                <TextView android:id="@+id/source"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Source"
                    android:textSize="20dp"
                    android:textColor="@color/txtcolordark"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>
                <TextView android:id="@+id/tvroute"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Route"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>
                <TextView android:id="@+id/tvmaplink"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/checkmap"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/linkcolor"
                    android:padding="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout android:layout_height="match_parent"
                   android:layout_width="wrap_content">
                <ImageView android:id="@+id/ivvehicle"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:src="@drawable/offerride"
                   />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_weight="1">


                <LinearLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView android:id="@+id/vehicledata"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Vehicle"
                        android:padding="10dp"
                        android:layout_gravity="left"
                        android:textColor="@color/txtcolordark"
                        android:layout_marginLeft="5dp"/>

                    <TextView android:id="@+id/tvseats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Avaliable Seats"
                        android:textColor="@color/txtcolordark"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView android:id="@+id/tvtriprate"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/rate"
                        android:textColor="@color/colorrs"
                        android:textSize="18dp"
                        android:padding="10dp"
                         />

                </LinearLayout>

               </LinearLayout>
               </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividercolor"/>
                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                <LinearLayout android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView android:id="@+id/woman"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/male"
                        />
                    <TextView android:id="@+id/tvpasstype"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Type"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtcolordark"
                        android:padding="2dp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                    <TextView android:id="@+id/smoking"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/smoking"
                        android:text="@string/smoking"
                        android:textColor="@color/txtcolordark"
                        android:gravity="center"/>

                    <TextView android:id="@+id/ac"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ac"
                        android:text="@string/ac"
                        android:textColor="@color/txtcolordark"
                        android:gravity="center"/>
                </LinearLayout>

                <TextView android:id="@+id/tvextra"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Extra"
                    android:gravity="center_vertical"
                    android:textColor="@color/txtcolordark"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"/>

                <Button android:id="@+id/btnsend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:text="Select Ride For Send Request"
                    android:textColor="@color/btntxtcolor"
                    android:background="@drawable/btn"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>
