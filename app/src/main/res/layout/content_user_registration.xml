<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fortin.carpool.UserRegistration"
    tools:showIn="@layout/activity_user_registration"
    android:background="@drawable/background">


    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_facebook"
                app:com_facebook_login_text="Connect with Facebook"
                app:com_facebook_logout_text="Logout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ScrollView android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.9">

            <LinearLayout android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etusernm"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Full Name"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/user_icon_dark"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etemail"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Email"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/email_icon"
                            android:padding="5dp"
                            android:inputType="textEmailAddress"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etmob"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Mobile Number"
                            android:drawableRight="@drawable/contact"
                            android:inputType="number"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etcity"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="City"
                            android:inputType="textCapSentences"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/marker_icon"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etpostal"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Postal Code"
                            android:inputType="number"
                            android:drawableRight="@drawable/marker_icon"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etcountry"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Country"
                            android:inputType="textCapSentences"
                            android:drawableRight="@drawable/marker_icon"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <TextView android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Select Gender"
                            android:textColor="@color/txtcolordark"
                            android:textSize="@dimen/textview_margin"/>

                        <RadioGroup android:id="@+id/rg"
                           android:layout_height="wrap_content"
                           android:layout_width="match_parent"
                            android:orientation="horizontal">

                           <RadioButton android:id="@+id/rbmale"
                               android:layout_height="match_parent"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:checked="true"
                               android:button="@null"
                               android:text="Male"
                               android:drawableTop="@drawable/male"
                               android:gravity="center_horizontal"/>

                           <RadioButton android:id="@+id/rbfemale"
                               android:layout_height="match_parent"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:button="@null"
                               android:text="Female"
                               android:drawableTop="@drawable/female"
                               android:gravity="center_horizontal"/>
                       </RadioGroup>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/edittext_topmargin"
                        android:layout_height="@dimen/edittext_height">

                        <EditText android:id="@+id/etbdate"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:hint="Date of Birth"
                            android:focusable="false"
                            android:drawableRight="@drawable/cal_icon"
                            android:padding="3dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:background="@android:color/transparent"/>
                    </android.support.design.widget.TextInputLayout>

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/dividercolor"/>

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/edittext_topmargin">

                        <LinearLayout android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/textview_margin"
                                android:text="Upload Profile Photo:"
                                android:textColor="@color/txtcolordark"/>
                            <ImageView android:id="@+id/ivprofile"
                                android:layout_height="70dp"
                                android:layout_width="match_parent"
                                android:src="@drawable/user_icon_dark" />
                        </LinearLayout>

                        <LinearLayout android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textview_margin"
                                android:layout_width="match_parent"
                                android:text="Upload Identity Photo:"
                                android:textColor="@color/txtcolordark"/>
                            <ImageView android:id="@+id/ividentity"
                                android:layout_height="70dp"
                                android:layout_width="match_parent"
                                android:src="@drawable/identity" />
                        </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                    <Button android:id="@+id/btnsave"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/textview_margin"
                        android:text="@string/save"
                        android:background="@drawable/btn"
                        android:textColor="@color/btntxtcolor"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
