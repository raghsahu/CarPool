<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/postBg"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/riderimg"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/user_icon"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:orientation="vertical">

        <TextView android:id="@+id/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/route"
            android:gravity="left"
            android:textColor="@color/txtcolordark"
            android:textSize="17dp"
            android:textStyle="bold"
            android:maxLines="3"
            android:padding="5dp"/>

        <TextView android:id="@+id/datetime"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="DateTime"
            android:gravity="left"
            android:textSize="17dp"
            android:textColor="@color/txtcolordark"
            android:maxLines="2"
            android:padding="5dp"/>

        <TextView android:id="@+id/vehicle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Vehicle"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="@color/txtcolordark"
            android:padding="5dp"
            android:maxLines="3"/>

        <TextView android:id="@+id/seats"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:text="Seats"
            android:textSize="15dp"
            android:gravity="left"
            android:textColor="@color/txtcolordark"
            android:padding="5dp"/>

        <TextView android:id="@+id/rate"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:text="@string/rate"
            android:gravity="right"
            android:textSize="21dp"
            android:textColor="@color/colorrs"
            android:textStyle="bold"
            android:padding="3dp"
           />
    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>